@model IEnumerable<WebApplication4.Models.User>

<h2>All users</h2>
@foreach (var item in Model)
{
    <div class="links">
        @Html.DisplayFor(modelItem => item.name)
        <button class="btn-primary" value="Open chat">
             @Html.ActionLink("Open chat", "Chat", new { id = item.Id })
        </button>
    </div>
}

<style>
    .links {
        margin: 15px 0;
        font-size: 20px;
    }
    a {
        text-decoration: none;
        color: white;
    }
</style>